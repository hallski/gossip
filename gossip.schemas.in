<gconfschemafile>
  <schemalist>

    <schema>
      <key>/schemas/apps/gossip/conversation/graphical_smileys</key>
      <applyto>/apps/gossip/conversation/graphical_smileys</applyto>
      <owner>gossip</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
         <short>Use graphical smileys</short>
         <long>
	 Whether or not to convert smileys into graphical images in
	 conversations.
         </long>
      </locale>
    </schema>
    
    <schema>
      <key>/schemas/apps/gossip/conversation/open_in_list</key>
      <applyto>/apps/gossip/conversation/open_in_tab</applyto>
      <owner>gossip</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Open conversations in single window with list view</short>
	<long>
	Whether or not to open conversations in a single window with list view.
	</long>
      </locale>
    </schema>
	

    <schema>
      <key>/schemas/apps/gossip/sound/play_sounds</key>
      <applyto>/apps/gossip/sound/play_sounds</applyto>
      <owner>gossip</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
         <short>Use notification sounds</short>
         <long>
	 Whether or not to play a sound when messages arrive.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/sound/silent_away</key>
      <applyto>/apps/gossip/sound/silent_away</applyto>
      <owner>gossip</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
         <short>Be silent when away</short>
         <long>
	 Whether or not to play sounds when away or busy.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/geometry/width</key>
      <applyto>/apps/gossip/geometry/width</applyto>
      <owner>gossip</owner>
      <type>int</type>
      <default>180</default>
      <locale name="C">
         <short>Width of main window</short>
         <long>
           The width of the main window.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/geometry/height</key>
      <applyto>/apps/gossip/geometry/height</applyto>
      <owner>gossip</owner>
      <type>int</type>
      <default>320</default>
      <locale name="C">
         <short>Height of main window</short>
         <long>
           The height of the main window.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/status/leaving_message</key>
      <applyto>/apps/gossip/status/leaving_message</applyto>
      <owner>gossip</owner>
      <type>string</type>
      <locale name="C">
        <default>About to leave...</default>
        <short>Message to show before going away</short>
        <long>
        </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/status/auto_away_message</key>
      <applyto>/apps/gossip/status/auto_away_message</applyto>
      <owner>gossip</owner>
      <type>string</type>
      <locale name="C">
        <default>Not at the computer</default>
        <short>Autoaway message</short>
        <long>
        </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/status/custom_away_messages</key>
      <applyto>/apps/gossip/status/custom_away_messages</applyto>
      <owner>gossip</owner>
      <type>list</type>
      <list_type>string</list_type>
      <locale name="C">
        <default>[Eating,Sleeping]</default>
        <short>Away messages</short>
        <long>
        </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/status/custom_busy_messages</key>
      <applyto>/apps/gossip/status/custom_busy_messages</applyto>
      <owner>gossip</owner>
      <type>list</type>
      <list_type>string</list_type>
      <locale name="C">
        <default>[Working]</default>
        <short>Busy messages</short>
        <long>
        </long>
      </locale>
    </schema>

  </schemalist>  
</gconfschemafile>




