<gconfschemafile>
  <schemalist>

    <schema>
      <key>/schemas/apps/gossip/conversation/graphical_smileys</key>
      <applyto>/apps/gossip/conversation/graphical_smileys</applyto>
      <owner>gossip</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
         <short>Use graphical smileys</short>
         <long>
	 Whether or not to convert smileys into graphical images in
	 conversations.
         </long>
      </locale>
    </schema>
    
    <schema>
      <key>/schemas/apps/gossip/contacts/show_offline</key>
      <applyto>/apps/gossip/contacts/show_offline</applyto>
      <owner>gossip</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Show offline contacts</short>
	<long>
	Whether or not to show contacts that are offline in the contact list.
	</long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/sound/play_sounds</key>
      <applyto>/apps/gossip/sound/play_sounds</applyto>
      <owner>gossip</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
         <short>Use notification sounds</short>
         <long>
	 Whether or not to play a sound when messages arrive.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/sound/silent_away</key>
      <applyto>/apps/gossip/sound/silent_away</applyto>
      <owner>gossip</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
         <short>Be silent when away</short>
         <long>
	 Whether or not to play sounds when away.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/sound/silent_busy</key>
      <applyto>/apps/gossip/sound/silent_busy</applyto>
      <owner>gossip</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
         <short>Be silent when busy</short>
         <long>
	 Whether or not to play sounds when busy.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/ui/main_window_width</key>
      <applyto>/apps/gossip/ui/main_window_width</applyto>
      <owner>gossip</owner>
      <type>int</type>
      <default>180</default>
      <locale name="C">
         <short>Width of the main window</short>
         <long>
           The width of the main window.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/ui/main_window_height</key>
      <applyto>/apps/gossip/ui/main_window_height</applyto>
      <owner>gossip</owner>
      <type>int</type>
      <default>320</default>
      <locale name="C">
         <short>Height of main window</short>
         <long>
           The height of the main window.
         </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/ui/main_window_position_x</key>
      <applyto>/apps/gossip/ui/main_window_position_x</applyto>
      <owner>gossip</owner>
      <type>int</type>
      <default>0</default>
      <locale name="C">
         <short>X position of main window</short>
         <long>
           The X position of the main window.
         </long>
      </locale>
    </schema>
    
    <schema>
      <key>/schemas/apps/gossip/ui/main_window_height</key>
      <applyto>/apps/gossip/ui/main_window_height</applyto>
      <owner>gossip</owner>
      <type>int</type>
      <default>0</default>
      <locale name="C">
         <short>Y position of main window</short>
         <long>
           The Y position of the main window.
         </long>
      </locale>
    </schema>

    <schema>
       <key>/schemas/apps/gossip/ui/main_window_hidden</key>
       <applyto>/apps/gossip/ui/main_window_hidden</applyto>
       <owner>gossip</owner>
       <type>bool</type>
       <default>0</default>
       <locale name="C">
          <short>Hide main window</short>
          <long>
            Hide the main window.
          </long>
       </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/status/leaving_message</key>
      <applyto>/apps/gossip/status/leaving_message</applyto>
      <owner>gossip</owner>
      <type>string</type>
      <locale name="C">
        <default>About to leave...</default>
        <short>Message to show before going away</short>
        <long>
        </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/status/auto_away_message</key>
      <applyto>/apps/gossip/status/auto_away_message</applyto>
      <owner>gossip</owner>
      <type>string</type>
      <locale name="C">
        <default>Not at the computer</default>
        <short>Autoaway message</short>
        <long>
        </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/status/custom_away_messages</key>
      <applyto>/apps/gossip/status/custom_away_messages</applyto>
      <owner>gossip</owner>
      <type>list</type>
      <list_type>string</list_type>
      <default>[Eating,Sleeping]</default>
      <locale name="C">
        <short>Away messages</short>
        <long>
        </long>
      </locale>
    </schema>

    <schema>
      <key>/schemas/apps/gossip/status/custom_busy_messages</key>
      <applyto>/apps/gossip/status/custom_busy_messages</applyto>
      <owner>gossip</owner>
      <type>list</type>
      <list_type>string</list_type>
      <default>[Working]</default>
      <locale name="C">
        <short>Busy messages</short>
        <long>
        </long>
      </locale>
    </schema>

  </schemalist>  
</gconfschemafile>




